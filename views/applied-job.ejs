<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recently Applied Jobs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            background: linear-gradient(135deg, #fdfbfb, #ebedee);
            margin: 0;
            color: #333;
        }
        header {
            background-color: #333;
            color: white;
            padding: 15px 0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 30px;
        }
        .header-container h1 {
            margin: 0;
            font-size: 28px;
            letter-spacing: 1px;
            color: #f5f5f5;
        }
        header img {
            width: 150px;
            height: 50px;
        }
        footer {
            text-align: center;
            padding: 15px;
            background-color: #333;
            color: white;
        }
        h1 {
            font-size: 36px;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }
        h2 {
            font-size: 28px;
            color: #555;
            margin-top: 30px;
            margin-bottom: 10px;
        }
        .card {
            background-color: #fff;
            border-radius: 12px;
            border: none;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }
        .job-item {
            padding: 15px;
            margin-bottom: 20px;
            border-left: 5px solid #007bff;
            animation: fadeIn 0.5s ease-in-out;
        }
        .job-item.active {
            border-left: 5px solid #28a745;
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .search-input {
            margin-bottom: 20px;
            padding: 12px;
            border-radius: 10px;
            border: 1px solid #ddd;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
        }
        .search-input:focus {
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
        }
        .no-jobs {
            text-align: center;
            color: #888888;
            font-size: 22px;
            margin-top: 40px;
            animation: fadeIn 0.5s ease-in-out;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-container">
            <img src="/images/trpzgarsetu.png" alt="Logo">
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/about">About Us</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>
    
    <div class="container mt-4">
        <h1 class="text-center">Recently Applied Jobs</h1>

        <!-- Search functionality -->
        <div class="row mb-3">
            <div class="col-12">
                <input type="text" id="jobSearch" class="form-control search-input" placeholder="Search job or company name...">
            </div>
        </div>

        <div class="job-list row">
            <!-- Show the currently active job first -->
            <% if (appliedJobs.length > 0) { %>
                <h2>Active Job</h2>
                <% const activeJob = appliedJobs.find(job => job.isActive); %>
                <% if (activeJob) { %>
                    <div class="col-md-12">
                        <div class="card mb-3 job-item active shadow-sm">
                            <div class="card-body">
                                <h3 class="text-primary"><i class="fas fa-briefcase"></i> <%= activeJob.jobTitle %></h3>
                                <p><strong>Job Post ID:</strong> <%= activeJob.jobPostId %></p>
                                <p><strong>Employee ID:</strong> <%= activeJob.employeeId %></p>
                                <p><strong>Registration ID:</strong> <%= activeJob.registrationId %></p>
                                <p><strong>Applied At:</strong> <%= activeJob.appliedAt.toLocaleDateString() %></p>
                                <p><strong>Company Name:</strong> <%= activeJob.companyName %></p>
                            </div>
                        </div>
                    </div>
                <% } %>

                <!-- Show past job history -->
                <h2>Job History</h2>
                <% appliedJobs.filter(job => !job.isActive).forEach(job => { %>
                    <div class="col-md-6">
                        <div class="card mb-3 job-item shadow-sm">
                            <div class="card-body">
                                <h3 class="text-primary"><i class="fas fa-briefcase"></i> <%= job.jobTitle %></h3>
                                <p><strong>Job Post ID:</strong> <%= job.jobPostId %></p>
                                <p><strong>Employee ID:</strong> <%= job.employeeId %></p>
                                <p><strong>Registration ID:</strong> <%= job.registrationId %></p>
                                <p><strong>Applied At:</strong> <%= job.appliedAt.toLocaleDateString() %></p>
                                <p><strong>Company Name:</strong> <%= job.companyName %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="no-jobs">You have not applied to any jobs yet.</p>
            <% } %>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 Labour Job Finder</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('jobSearch').addEventListener('input', function() {
            let searchValue = this.value.toLowerCase();
            let jobItems = document.querySelectorAll('.job-item');
            jobItems.forEach(function(item) {
                let jobTitle = item.querySelector('h3').textContent.toLowerCase();
                let companyName = item.querySelector('p:last-of-type').textContent.toLowerCase();
                if (jobTitle.includes(searchValue) || companyName.includes(searchValue)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>
